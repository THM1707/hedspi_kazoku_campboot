<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %> <br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :company %><br/>
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <b>Gender</b><br/>
    <%= f.radio_button :gender, 0 %> Male<br/>
    <%= f.radio_button :gender, 1 %> Female<br/>
  </div>

  <div class="field">
    <b>School Year</b><br/>
    <%= f.radio_button :school_year, 1 %> 1
    <%= f.radio_button :school_year, 2 %> 2
    <%= f.radio_button :school_year, 3 %> 3
    <%= f.radio_button :school_year, 4 %> 4
    <%= f.radio_button :school_year, 5 %> 5<br/>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
